{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Release: New Version",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-File",
        "${workspaceFolder}/scripts/Release-Version.ps1"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Build Solution",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/EasyScrutor.sln",
        "--configuration",
        "Release"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Test Solution",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/EasyScrutor.sln",
        "--configuration",
        "Release",
        "--no-build",
        "--verbosity",
        "normal"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": ["Build Solution"]
    },
    {
      "label": "Pack NuGet Package",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "pack",
        "${workspaceFolder}/src/EasyScrutor/EasyScrutor.csproj",
        "--configuration",
        "Release",
        "--output",
        "${workspaceFolder}/packages"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "Clean Solution",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "clean",
        "${workspaceFolder}/EasyScrutor.sln",
        "--configuration",
        "Release"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile",
      "group": "build"
    }
  ]
}
