@page "/counter"
@using BlazorServerExample.Services
@inject ICounterService CounterService

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<div class="alert alert-info mt-3">
    <strong>Scrutor.AspNetCore Demo:</strong> The ICounterService was automatically registered as Singleton!
    This counter is shared across all users and sessions.
</div>

@code {
    private int currentCount = 0;

    protected override void OnInitialized()
    {
        currentCount = CounterService.GetCount();
    }

    private void IncrementCount()
    {
        CounterService.Increment();
        currentCount = CounterService.GetCount();
    }
}
